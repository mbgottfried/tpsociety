<div id="content-push">
	<div class="container">
		<div class="center">
			<h2>Join The Society</h2>
			<strong>Membership and Plan</strong> <span class="glyphicon glyphicon-play"></span> Checkout
		</div>
		
		<div class="col-md-8 top-down">
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					  <%= devise_error_messages! %>
						
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4>Your Information</h4>
							</div>
							<div class="panel-body">
						  		<div class="form-group col-md-6">
						  			<%= f.text_field :firstname, :autofocus => true, class: "form-control", placeholder: "First Name" %>
						  		</div>

								<div class="form-group col-md-6">
									<%= f.text_field :lastname, :autofocus => true, class: "form-control", placeholder: "Last Name" %>
								</div>
						  </div>
					  </div>

					  	<div class="panel panel-default">
					  		<div class="panel-heading">
					  			<h4>Create Your Account</h4>
					  		</div>
					  		<div class="panel-body">
								<div class="form-group col-md-12">
									<%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email Address" %>
								</div>

								<div class="form-group col-md-6">
								  	<%= f.password_field :password, class: "form-control", placholder: "Password" %>
								</div>

								<div class="form-group col-md-6">
								  	<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
								</div>
							</div>
						</div>

						<div class="panel panel-default">
							<div class="panel-heading">
								<h4>Pick Your Plan<h4>
							</div>
							<div class="panel-body">
						 		<div><%= f.label :plan %><br />
						  			<%= f.radio_button :plan, 'plan 1', :checked => true %>
						  			<%=	label :plan_plan1, 'Plan 1' %>
						  			<%= f.radio_button :plan, 'plan 2' %>
						  			<%= label :plan_plan2, 'Plan 2' %>
						  		</div>
						  	</div>
						</div>

						<div class="panel panel default">
							<div class="panel-heading">
								<h4>Credit Card</h4>
							</div>
						</div>


					  <div><%= f.submit "Register & Checkout", class: "btn btn-primary btn-block btn-lg" %></div>
					<% end %>
				<br />
					<%= render "devise/shared/links" %>
		</div>

		<div class="col-md-4 top-down">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4>What you get:</h4>
				</div>
				<div class="panel-body">
					LOREM IPSUM DOLOR
				</div>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>