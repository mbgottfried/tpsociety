<div id="content-push">
	<div class="container">
		<div class="center">
			<h2>Join The Society</h2>
			<span class="active-step">Membership and Plan</span> > <span class="inactive-step">Checkout</span>
		</div>
		<div class="col-md-8">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					  <%= devise_error_messages! %>

					  <div class="form-group">
					  	<%= f.text_field :firstname, :autofocus => true, class: "form-control", placeholder: "First Name" %>
					  </div>

					  <div class="form-group">
					  	<%= f.text_field :lastname, :autofocus => true, class: "form-control", placeholder: "Last Name" %>
					  </div>

					  <div class="form-group">
					  	<%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email Address" %>
					  </div>

					  <div class="form-group">
					  	<%= f.label :password %><br />
					  	<%= f.password_field :password, class: "form-control" %>
					  </div>

					  <div class="form-group">
					  	<%= f.label :password_confirmation %><br />
					  	<%= f.password_field :password_confirmation, class: "form-control" %>
					  </div>

					  <div><%= f.label :plan %><br />
					  	<%= f.radio_button :plan, 'plan 1', :checked => true %>
					  	<%= label :plan_plan1, 'Plan 1' %>
					  	<%= f.radio_button :plan, 'plan 2' %>
					  	<%= label :plan_plan2, 'Plan 2' %>
					  </div>

					  <div><%= f.submit "Sign up" %></div>
					<% end %>
				</div>

				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>